<div class="container formMargin formWidth">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <form method="POST" action="/login">
        <div class="form-group row">
          <i class="fa fa-envelope col-2" aria-hidden="true"></i>
          <input type="email" class="form-control col-10" placeholder="Email..." name="email">
        </div>
        <div class="form-group row">
          <i class="fa fa-key col-2" aria-hidden="true"></i>
          <input type="password" class="form-control col-10" placeholder="Password..." name="password">
        </div>
        <div class="row">
          <button type="submit" class="btn btn-primary col-12">Login</button>
        </div>
      </form>
    </div>
  </div>
</div>
